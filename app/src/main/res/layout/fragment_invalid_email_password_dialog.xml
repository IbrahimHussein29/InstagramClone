<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.InvalidEmailPasswordDialogFragment">
<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/invalid_img"
    android:layout_marginTop="@dimen/text_edt_margin_xxxl"
    android:layout_width="50dp"
    android:layout_height="50dp"
   android:tint="@color/color_primary"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
android:src="@drawable/shocked_icon"
    />
    <TextView
        android:id="@+id/login_failed_text"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/invalid_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/app_color"
        android:text="Login Failed. Incorrect email or\n Password"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="@dimen/margin_large"
        android:id="@+id/btn_ok"

        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingVertical="5dp"
        android:text="@string/ok"
        android:textColor="@color/color_primary"
        app:strokeColor="#007dff"
        android:textSize="@dimen/btn_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/login_failed_text"
        app:layout_constraintStart_toStartOf="@id/login_failed_text"
        app:layout_constraintTop_toBottomOf="@id/login_failed_text"
android:layout_marginBottom="@dimen/margin_large"
        app:layout_constraintBottom_toBottomOf="parent"


        />


</androidx.constraintlayout.widget.ConstraintLayout>