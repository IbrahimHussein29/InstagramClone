<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_small_2"
    android:padding="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small_2">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img"
        android:layout_marginVertical="@dimen/margin_small_2"
        android:layout_marginStart="@dimen/margin_small_2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

 />

    <TextView
        android:layout_marginStart="@dimen/margin_normal"
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@color/app_color"
        app:layout_constraintTop_toTopOf="@id/profile_img"
        app:layout_constraintBottom_toBottomOf="@id/profile_img"
        app:layout_constraintStart_toEndOf="@id/profile_img"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/follow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_primary"
        android:paddingVertical="@dimen/button_padding"
        android:text="@string/follow"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_text_size_medium"
        android:layout_marginEnd="@dimen/margin_xl"
        app:layout_constraintTop_toTopOf="@id/profile_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/profile_img"

        />

</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>